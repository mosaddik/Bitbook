@model BitBookApp.ViewModel.Profile.ViewModelCoverPicture
@{
   Layout = "~/Views/Shared/_EditProfile.cshtml";
   string path = "~/Image/ProfilePic/" + ViewBag.CoverPicture;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CoverPhotoEdit</title>
</head>
<body>
<div>
    
    <img src=@Url.Content(path) height="100" width="100"/>

    @using (Html.BeginForm("UpdateCoverPhoto", "Profile", FormMethod.Post,
        new {enctype = "multipart/form-data"}))
    {
        <label>Upload Image:</label>
        @Html.TextBoxFor(a => a.Picture, new {type = "file"})
        <input type="submit" value="Upload" class="submit"/>
    }
</div>
</body>
</html>
